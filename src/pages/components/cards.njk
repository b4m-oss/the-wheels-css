{% extends "layouts/base.njk" %}

{% block title %}Cards - the-wheels-css{% endblock %}

{% block content %}
<h1 class="text-3xl mb-6">Cards</h1>

<section class="mb-8">
  <h2 class="text-xl mb-4">Basic Card</h2>
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
    <div class="card">
      <div class="card-body">
        <h3 class="card-title">Card Title</h3>
        <p class="card-text text-muted mt-2">
          This is a basic card with some example text content.
        </p>
      </div>
    </div>
  </div>
</section>

<section class="mb-8">
  <h2 class="text-xl mb-4">Card with Header & Footer</h2>
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
    <div class="card">
      <div class="card-header">
        <h3 class="card-title">Featured</h3>
      </div>
      <div class="card-body">
        <h4 class="card-title">Card Title</h4>
        <p class="card-subtitle">Card subtitle</p>
        <p class="card-text mt-4">
          Some quick example text to build on the card title.
        </p>
      </div>
      <div class="card-footer">
        <button class="btn btn-primary btn-sm">Action</button>
      </div>
    </div>
  </div>
</section>

<section class="mb-8">
  <h2 class="text-xl mb-4">Card Variants</h2>
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
    <div class="card">
      <div class="card-body">
        <h3 class="card-title">Default</h3>
        <p class="card-text text-muted mt-2">
          Default card with border.
        </p>
      </div>
    </div>
    <div class="card card-flat">
      <div class="card-body">
        <h3 class="card-title">Flat</h3>
        <p class="card-text text-muted mt-2">
          Flat card with subtle shadow.
        </p>
      </div>
    </div>
    <div class="card card-elevated">
      <div class="card-body">
        <h3 class="card-title">Elevated</h3>
        <p class="card-text text-muted mt-2">
          Elevated card with larger shadow.
        </p>
      </div>
    </div>
  </div>
</section>

<section class="mb-8">
  <h2 class="text-xl mb-4">Interactive Card</h2>
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
    <div class="card card-flat card-interactive">
      <div class="card-body">
        <h3 class="card-title">Hover me</h3>
        <p class="card-text text-muted mt-2">
          This card lifts up on hover.
        </p>
      </div>
    </div>
    <div class="card card-flat card-interactive">
      <div class="card-body">
        <h3 class="card-title">Hover me</h3>
        <p class="card-text text-muted mt-2">
          This card lifts up on hover.
        </p>
      </div>
    </div>
    <div class="card card-flat card-interactive">
      <div class="card-body">
        <h3 class="card-title">Hover me</h3>
        <p class="card-text text-muted mt-2">
          This card lifts up on hover.
        </p>
      </div>
    </div>
  </div>
</section>

<section class="mb-8">
  <h2 class="text-xl mb-4">Card with Image</h2>
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
    <div class="card card-flat">
      <img 
        src="https://picsum.photos/400/200" 
        alt="Placeholder" 
        class="card-img card-img-top"
      >
      <div class="card-body">
        <h3 class="card-title">Card with Image</h3>
        <p class="card-text text-muted mt-2">
          This card has an image on top.
        </p>
        <a href="#" class="btn btn-primary btn-sm mt-4">Learn more</a>
      </div>
    </div>
  </div>
</section>

<section class="mb-8">
  <h2 class="text-xl mb-4">Code Example</h2>
  <pre><code>&lt;div class="card"&gt;
  &lt;div class="card-header"&gt;
    &lt;h3 class="card-title"&gt;Header&lt;/h3&gt;
  &lt;/div&gt;
  &lt;div class="card-body"&gt;
    &lt;h4 class="card-title"&gt;Title&lt;/h4&gt;
    &lt;p class="card-subtitle"&gt;Subtitle&lt;/p&gt;
    &lt;p class="card-text"&gt;Content...&lt;/p&gt;
  &lt;/div&gt;
  &lt;div class="card-footer"&gt;
    &lt;button class="btn btn-primary"&gt;Action&lt;/button&gt;
  &lt;/div&gt;
&lt;/div&gt;

&lt;!-- Variants --&gt;
&lt;div class="card card-flat"&gt;...&lt;/div&gt;
&lt;div class="card card-elevated"&gt;...&lt;/div&gt;
&lt;div class="card card-interactive"&gt;...&lt;/div&gt;</code></pre>
</section>
{% endblock %}

