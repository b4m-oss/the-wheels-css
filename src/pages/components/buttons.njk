{% extends "layouts/base.njk" %}

{% block title %}Buttons - the-wheels-css{% endblock %}

{% block content %}
<h1 class="text-3xl mb-6">Buttons</h1>

<section class="mb-8">
  <h2 class="text-xl mb-4">Button Variants</h2>
  <div class="flex flex-wrap gap-4">
    <button class="btn btn-primary">Primary</button>
    <button class="btn btn-secondary">Secondary</button>
    <button class="btn btn-outline">Outline</button>
    <button class="btn btn-ghost">Ghost</button>
  </div>
</section>

<section class="mb-8">
  <h2 class="text-xl mb-4">Button Sizes</h2>
  <div class="flex flex-wrap items-center gap-4">
    <button class="btn btn-primary btn-sm">Small</button>
    <button class="btn btn-primary">Default</button>
    <button class="btn btn-primary btn-lg">Large</button>
  </div>
</section>

<section class="mb-8">
  <h2 class="text-xl mb-4">Disabled State</h2>
  <div class="flex flex-wrap gap-4">
    <button class="btn btn-primary" disabled>Primary Disabled</button>
    <button class="btn btn-secondary" disabled>Secondary Disabled</button>
    <button class="btn btn-outline" disabled>Outline Disabled</button>
  </div>
</section>

<section class="mb-8">
  <h2 class="text-xl mb-4">Block Button</h2>
  <button class="btn btn-primary btn-block">Block Button</button>
</section>

<section class="mb-8">
  <h2 class="text-xl mb-4">As Links</h2>
  <div class="flex flex-wrap gap-4">
    <a href="#" class="btn btn-primary">Link as Button</a>
    <a href="#" class="btn btn-outline">Link Outline</a>
  </div>
</section>

<section class="mb-8">
  <h2 class="text-xl mb-4">Code Example</h2>
  <pre><code>&lt;button class="btn btn-primary"&gt;Primary&lt;/button&gt;
&lt;button class="btn btn-secondary"&gt;Secondary&lt;/button&gt;
&lt;button class="btn btn-outline"&gt;Outline&lt;/button&gt;
&lt;button class="btn btn-ghost"&gt;Ghost&lt;/button&gt;

&lt;!-- Sizes --&gt;
&lt;button class="btn btn-primary btn-sm"&gt;Small&lt;/button&gt;
&lt;button class="btn btn-primary btn-lg"&gt;Large&lt;/button&gt;

&lt;!-- Block --&gt;
&lt;button class="btn btn-primary btn-block"&gt;Block&lt;/button&gt;</code></pre>
</section>
{% endblock %}

